                img: 'img/corp/common-icon5.svg',
                title: '2&nbsp;года гарантии<br>в&nbsp;подарок',
                text: ''
            }
        ]
    }

mixin list-width-icons(props = defaultListWidthIconsProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultListWidthIconsProps.classes,
            list: props.list ? props.list : defaultListWidthIconsProps.list
        }

    .list-width-icons(class= checkProps.classes)&attributes(attributes)
        - let counter = 0;
        - while(counter < checkProps.list.length)
            - let item = checkProps.list[counter]
            .list-width-icons__block
                .list-width-icons__img
                    img(src=item.img)
                .list-width-icons__title!= item.title
                - if(item.text.length > 0)
                    .list-width-icons__text!= item.text

            - counter++
