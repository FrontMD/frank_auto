        classes: '',
        list: [
            {
                img: 'img/corp/common-icon1.svg',
                title: 'Выгода<br>до&nbsp;1&nbsp;500&nbsp;000&nbsp;₽',
                text: ''
            },
            {
                img: 'img/corp/common-icon2.svg',
                title: '100&nbsp;000&nbsp;₽<br>за&nbsp;тест&#8209;драйв',
                text: ''
            },
            {
                img: 'img/corp/common-icon3.svg',
                title: '17% докризисная<br>ставка',
                text: ''
            },
            {
                img: 'img/corp/common-icon4.svg',
                title: 'Услуга<br>удаленной комиссии',
