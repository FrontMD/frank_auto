header.site-header(data-js="siteHeader")
    .section.site-header__section(data-js="siteHeaderSection")
        .section__container.site-header__container
            .site-header__top.site-header__row(data-js="siteHeaderTop")
                .section-block.site-header__block.site-header__left
                    a(href="javascript:void(0);").site-header__logo
                        img(src="img/logo/logo_header.svg" alt="")
                        span Почувствуй новое первым
                .section-block.site-header__block.site-header__schedule
                    .header-schedule
                        .header-schedule__icon
                            svg
                                use(xlink:href=`img/sprites/sprite.svg#timer`)
                        .header-schedule__text Время работы: <br>c 08:00 до 21:00

                .section-block.site-header__block.site-header__phones
                    .header-phones
                        .header-phones__item Новорижское ш., 17й км, с3 <a href="tel:+74991165065">+7 (499) 116-50-65</a>
                        .header-phones__item Ярославское ш., д.42 <a href="tel:+74991165065">+7 (499) 116-50-65</a>
                .section-block.site-header__block.site-header__soc
                    .header-soc
                        .header-soc__title Наши соц сети:
                        .header-soc__links
                            a(href="javascript:void(0);").header-soc__link
                                svg
                                    use(xlink:href=`img/sprites/sprite.svg#youtube`)
                            a(href="javascript:void(0);").header-soc__link
                                svg
                                    use(xlink:href=`img/sprites/sprite.svg#telegram`)
                            a(href="javascript:void(0);").header-soc__link
                                svg
                                    use(xlink:href=`img/sprites/sprite.svg#whatsapp`)
                            a(href="javascript:void(0);").header-soc__link
                                svg
                                    use(xlink:href=`img/sprites/sprite.svg#dzen`)
                .section-block.site-header__block.site-header__compare
                    a(href="javascript:void(0);").header-compare
                        span 12
                        svg
                            use(xlink:href=`img/sprites/sprite.svg#compare`)
                +btn({
                    name: 'Обратный звонок',
                    cMode: 'accent',
                    sMode: 'header',
                    icon: 'handset',

                })

            .site-header__bottom.site-header__row
                .section-block.site-header__block.site-header__menu
                    nav.header-menu
                        .header-menu__item
                            .header-menu__header
                                a(href="javascript:void(0);").header-menu__link Автомобили
                                .header-menu__icon
                                    svg
                                        use(xlink:href=`img/sprites/sprite.svg#arrow_angle_down`)
                            .header-menu__submenu
                                .header-menu__subtitle Автомобили
                                .header-menu__list
                                    a(href="javascript:void(0);").header-menu__link Пункт 1
                                    a(href="javascript:void(0);").header-menu__link Пункт 2
                                    a(href="javascript:void(0);").header-menu__link Пункт 3
                                    a(href="javascript:void(0);").header-menu__link Пункт 4

                        .header-menu__item
                            .header-menu__header
                                a(href="javascript:void(0);").header-menu__link Услуги
                                .header-menu__icon
                                    svg
                                        use(xlink:href=`img/sprites/sprite.svg#arrow_angle_down`)
                            .header-menu__submenu
                                .header-menu__subtitle Услуги
                                .header-menu__list
                                    a(href="javascript:void(0);").header-menu__link Пункт 1
                                    a(href="javascript:void(0);").header-menu__link Пункт 2
                                    a(href="javascript:void(0);").header-menu__link Пункт 3
                                    a(href="javascript:void(0);").header-menu__link Пункт 4

                        .header-menu__item
                            .header-menu__header
