mixin story-slider(props= defaultStorySliderProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultStorySliderProps.classes,
            title: props.title ? props.title : defaultStorySliderProps.title,
            btn: props.btn ? props.btn : defaultStorySliderProps.btn,
            cards: props.cards ? props.cards : defaultStorySliderProps.cards,
        }

    section.section.story-slider(class= checkProps.classes data-js="storySlider")&attributes(attributes)
        .section__container
            .section-block.story-slider__block
                .section-header
                    .section-header__title.title.title--36!= checkProps.title
                    if(checkProps.btn !== false)
                        +btn(checkProps.btn)

                .section-block__content.story-slider__slider(data-js="storySliderSlider")
                    .swiper-wrapper
                        - let cardsCount = 0
                        -while(cardsCount < checkProps.cards.length)
                            +story-card(checkProps.cards[cardsCount])

                            - cardsCount++
