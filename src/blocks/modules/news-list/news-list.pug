mixin news-list(props= defaultNewsListProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultNewsListProps.classes,
            stocksPage: props.stocksPage ? props.stocksPage : defaultNewsListProps.stocksPage,
            cards: props.cards ? props.cards : defaultNewsListProps.cards,
        }

    section.section.news-list(class= checkProps.classes)&attributes(attributes)
        .section__container.section__content
            .section-block.news-list__block
                form.news-list__filter(action="#")
                    - if(checkProps.stocksPage === true)
                        .custom-scrollbar.news-list__scroll(data-js="customScrollbar")
                            .news-list__tabs
                                .field.field--tab
                                    label
                                        input.field__input(class="field__input" type="checkbox" name="news-filter" placeholder="")
                                        span.fake-checkbox
                                            | Акции сервиса
                                            svg
                                                use(xlink:href=`img/sprites/sprite.svg#close`)
                                .field.field--tab
                                    label
                                        input.field__input(class="field__input" type="checkbox" name="news-filter" placeholder="")
                                        span.fake-checkbox
