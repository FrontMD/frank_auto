                            classes: 'news-list__sort',
                            tag: 'select',
                            placeholder: 'Сортировать',
                            selectOptions: [
                                "Сначала новое",
                                "Сначала старое",
                            ],
                        })

                .section-block__content.news-list__list
                    - let cardsCount = 0
                        -while(cardsCount < checkProps.cards.length)
                            +news-card(checkProps.cards[cardsCount])

