-
    const defaultPopularBrandsProps = {
        classes: '',
        title: 'Популярные марки',
        brands: [
            'img/brands/brand_logo_1.webp',
            'img/brands/brand_logo_2.webp',
            'img/brands/brand_logo_3.webp',
            'img/brands/brand_logo_4.webp',
            'img/brands/brand_logo_5.webp',
            'img/brands/brand_logo_6.webp',
            'img/brands/brand_logo_7.webp',
            'img/brands/brand_logo_8.webp',
            'img/brands/brand_logo_9.webp',
            'img/brands/brand_logo_10.webp',
            'img/brands/brand_logo_11.webp',
            'img/brands/brand_logo_12.webp',
            'img/brands/brand_logo_13.webp',
