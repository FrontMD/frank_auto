            'img/brands/brand_logo_18.webp',
            'img/brands/brand_logo_19.webp',
            'img/brands/brand_logo_20.webp',
        ]
    }

mixin popular-brands(props= defaultPopularBrandsProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultPopularBrandsProps.classes,
            title: props.title ? props.title : defaultPopularBrandsProps.title,
            brands: props.brands ? props.brands : defaultPopularBrandsProps.brands,
        }

    section.section.popular-brands(class= checkProps.classes)&attributes(attributes)
        .section__container.section__content
            .popular-brands__title.title.title--36!= checkProps.title
            .popular-brands__slider(data-js="popularBrandsSlider")
                .swiper-wrapper
                    - let brandsCount = 0
                    -while(brandsCount < checkProps.brands.length)
                        .swiper-slide.popular-brands__slide
                            img(src=checkProps.brands[brandsCount], alt="")

                        - brandsCount++
