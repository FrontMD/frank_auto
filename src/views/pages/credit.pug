extends ../layouts/default
include ../helpers/mixins

block variables
	- const title = "Кредитование"

block content
	.page-layout(data-js="pageLayout")
		+s-breadcrumbs({
			items: [
				{
					name: 'FrankAuto',
					link: 'javascript:void(0);'
				},
				{
					name: 'Кредитование',
					link: 'javascript:void(0);'
				}
			],
		})

		+img-intro({
			img: 'img/intros/credit_intro.webp',
			imgMob: 'img/intros/credit_intro_mob.webp',
			title: 'Кредитование',
			text: 'Воплотите мечту о новом автомобиле уже сегодня с выгодным предложением. <br>Заполните заявку, чтобы получить уникальное предложение.',
			sticker: {
				inTitle: false,
				small: 'По льготной ставке',
				big: 'от 1,9%'
			}
		})

		+list-form({
			personalMarker: '3.'
		})
			.form__item
				.title.title--30.form__list-title
					.form__marker 1.
					| Ваш будущий автомобиль
				.form__block.form__block--sgrid
					.form__fields.form__fields--column
						+field({
							classes: '',
							tag: 'select',
							placeholder: 'Марка',
							selectOptions: [
								"",
								"LiXiang",
								"Voyah",
								"AITO",
								"Chery",
								"Zeekr",
								"Audi",
								"Tank",
								"Rox Motor Tech",
							],
							inputAttr: {
								'required': '',
								multiple: "multiple"

							},
							})
						+field({
							tag: 'select',
							placeholder: 'Модель',
							selectOptions: [
								"",
								"LiXiang L6",
								"LiXiang L7",
								"LiXiang L9",
								"LiXiang L9",
								"LiXiang Mega",
								"LiXiang One"
							],
							inputAttr: {
								'required': '',
								multiple: "multiple"
							},

						})
						+field({
							classes: '',
							tag: 'select',
							placeholder: 'Комплектация',
							selectOptions: [
								"",
								"Base",
								"Comfort",
								"Sport",
								"Luxe",
							],
							inputAttr: {
								'required': '',
							},
						})

					.form__auto.form-auto
						.form-auto__img
							img(src="img/catalog-model/model_5.webp" alt="")
						.form-auto__info
							.form-auto__title.title Lixiang L7 1.4 100 л.с.<br>6MT 2WD (2020)
							.form-auto__prices
								.form-auto__price.form-auto__price--base
									span Базовая цена
									| 12&nbsp;500&nbsp;000&nbsp;₽
								.form-auto__price.form-auto__price--discount
									span Цена со скидками
									| 5&nbsp;500&nbsp;000&nbsp;₽
							.form-auto__credit.title-sticker
								| Платеж
								span 70 000 ₽/мес.

			.form__item
				.form__block.form__block--cgrid.form__block--header
					.title.title--30.form__list-title
						.form__marker 2.
						| Купить в кредит
					.checkboxes-grid
						+field({
							type: 'checkbox',
							radioCheckboxText: 'Скидка 70 000 ₽',
							inputAttr: {
								checked: ''
							}
						})
						+field({
							type: 'checkbox',
							radioCheckboxText: 'Акция “Выгодный кредит” Скидка 30 000 ₽',
							inputAttr: {
								checked: ''
							}
						})

				.form__block.form__block--cgrid.form__block--gap70
					+field-range({
						title: 'Cрок кредита, месяцев',
						unit: ' мес',
						min: '6',
						max: '84',
						step: '6'
					})
					+field({
						placeholder: 'Первоначальный взнос',
						inputAttr: {
							'data-type': 'number',
							'required': ''
						}
					})
					.logo-radios
						.logo-radios__name Выберите банк:
						.logo-radios__list
							+field({
								type: 'radio',
								radioCheckboxImg: 'img/about/bank_1.webp',
								inputAttr: {
									name: 'bank',
									checked: ''
								}
							})
							+field({
								type: 'radio',
								radioCheckboxImg: 'img/about/bank_2.webp',
								inputAttr: {
									name: 'bank'
								}
							})
							+field({
								type: 'radio',
								radioCheckboxImg: 'img/about/bank_3.webp',
								inputAttr: {
									name: 'bank'
								}
							})
							+field({
								type: 'radio',
								radioCheckboxImg: 'img/about/bank_4.webp',
								inputAttr: {
									name: 'bank'
								}
							})
							+field({
								type: 'radio',
								radioCheckboxImg: 'img/about/bank_5.webp',
								inputAttr: {
									name: 'bank'
								}
							})
							+field({
								type: 'radio',
								radioCheckboxImg: 'img/about/bank_6.webp',
								inputAttr: {
									name: 'bank'
								}
							})

		+info-list
		+s-conditions
		+s-banks

		+s-reviews({
			title: 'Нам доверяют'
		})
