extends ../layouts/default
include ../helpers/mixins

block variables
	- const title = "Кредитование"

block content
	.page-layout(data-js="pageLayout")
		+s-breadcrumbs({
			items: [
				{
					name: 'FrankAuto',
					link: 'javascript:void(0);'
				},
				{
					name: 'Кредитование',
					link: 'javascript:void(0);'
				}
			],
		})

		+img-intro({
			img: 'img/intros/credit_intro.webp',
			imgMob: 'img/intros/credit_intro_mob.webp',
			title: 'Кредитование',
			text: 'Воплотите мечту о новом автомобиле уже сегодня с выгодным предложением. <br>Заполните заявку, чтобы получить уникальное предложение.',
			sticker: {
				inTitle: false,
				small: 'По льготной ставке',
				big: 'от 1,9%'
			}
		})

		+list-form({
			personalMarker: '3.'
		})
			.form__item
				.title.title--30.form__list-title
					.form__marker 1.
					| Ваш будущий автомобиль
				.form__block.form__block--sgrid
					.form__fields.form__fields--column
						+field({
							classes: '',
							tag: 'select',
							placeholder: 'Марка',
							selectOptions: [
								"",
								"LiXiang",
								"Voyah",
								"AITO",
								"Chery",
								"Zeekr",
								"Audi",
								"Tank",
								"Rox Motor Tech",
							],
							inputAttr: {
								'required': '',
							},
							})
						+field({
							tag: 'select',
							placeholder: 'Модель',
							selectOptions: [
								"",
								"LiXiang L6",
								"LiXiang L7",
								"LiXiang L9",
								"LiXiang L9",
								"LiXiang Mega",
								"LiXiang One"
							],
							inputAttr: {
								'required': '',
							},

						})
						+field({
							classes: '',
							tag: 'select',
							placeholder: 'Комплектация',
							selectOptions: [
								"",
								"Base",
								"Comfort",
								"Sport",
								"Luxe",
							],
							inputAttr: {
								'required': '',
							},
						})

					.form__auto.form-auto
						.form-auto__img
							img(src="img/catalog-model/model_5.webp" alt="")
						.form-auto__info
							.form-auto__title.title Lixiang L7 1.4 100 л.с.<br>6MT 2WD (2020)
							.form-auto__prices
								.form-auto__price.form-auto__price--base
									span Базовая цена
									| 12 500 000 ₽
								.form-auto__price.form-auto__price--discount
									span Цена со скидками
									| 5 500 000 ₽
							.form-auto__credit.title-sticker
								| Платеж
								span 70 000 ₽/мес.

			.form__item
				.title.title--30.form__list-title
					.form__marker 2.
					| Купить в кредит
				.form__block

		+s-banks

		+s-reviews({
			title: 'Нам доверяют'
		})
