                    })
                    +field({
                        classes: '',
                        tag: 'select',
                        placeholder: 'Модель',
                        inputAttr: {
                        'required': '',
                        multiple: "multiple"
                        },
                        selectOptions: [
                            "",
                            "LiXiang L6",
                            "LiXiang L7",
                            "LiXiang L9",
                            "LiXiang L9",
                            "LiXiang Mega",
                            "LiXiang One"
                        ],
                    })
                    +field({
                        classes: '',
                        tag: 'select',
                        placeholder: 'Год выпуска',
                        inputAttr: {
                        'required': '',
                        },
                        selectOptions: [
                            "",
                            "2020",
                            "2021",
                            "2022",
                            "2023",
                            "2024",
                            "2025",
                        ],
                    })
                    +field({
                        classes: 'service-form__long',
                        placeholder: 'Описание услуги / проблемы',
                    })