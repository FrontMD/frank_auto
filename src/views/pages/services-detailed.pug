extends ../layouts/default
include ../helpers/mixins

block variables
    - const title = "Универсальная услуга"

block content
    .page-layout(data-js="pageLayout")
        +s-breadcrumbs({
            items: [
                {
                    name: 'FrankAuto',
                    link: 'javascript:void(0);'
                },
                {
                    name: 'Услуги',
                    link: 'javascript:void(0);'
                },
                {
                    name: 'Кузовной ремонт',
                    link: 'javascript:void(0);'
                },
            ],
        })

        +ns-article({
            title: 'Кузовной ремонт',
            date: '25.10.2025',
            section: 'Спецпредложение',
            service: true
        })

        +s-news({
            title: 'Акции',
            btn: {
                classes: 'section-header__btn',
                name: 'Смотреть все',
                cMode: 'bordered',
                sMode: 'content'
            },
            cards: [
                {
                    classes: 'swiper-slide news-card--small',
                    img: 'img/stocks/stock_1.webp',
                    title: 'АВТОКРЕДИТ С ДОКРИЗИСНОЙ СТАВКОЙ!',
                    text: 'Специальная кредитная программа на автомобили с докризисной ставкой ВСЕГО 17% ГОДОВЫХ. Это ваш шанс приобрести автомобиль на выгодных условиях и забыть о высоких процентах!',
                    tag: '',
                    date: '25.10.2025'
                },
                {
                    classes: 'swiper-slide news-card--small',
                    img: 'img/stocks/stock_2.webp',
                    title: 'Собери автомобиль мечты с телеграмм ботом',
                    text: 'Специальная кредитная программа на автомобили с докризисной ставкой ВСЕГО 17% ГОДОВЫХ. Это ваш шанс приобрести автомобиль на выгодных условиях и забыть о высоких процентах!',
                    tag: '',
                    date: '25.10.2025'
                },
                {
                    classes: 'swiper-slide news-card--small',
                    img: 'img/stocks/stock_3.webp',
                    title: 'Выгода от FRANK AUTO - выбирайте с умом!',
                    text: 'Специальная кредитная программа на автомобили с докризисной ставкой ВСЕГО 17% ГОДОВЫХ. Это ваш шанс приобрести автомобиль на выгодных условиях и забыть о высоких процентах!',
                    tag: '',
                    date: '25.10.2025'
                }
            ]
        })

        +s-banner({
            img: '<picture><source srcset="img/services/service_form_mob.webp" media="(max-width: 767px)"><img src="img/services/service_form.webp" alt=""></picture>',
            imgPos: 'right'
        })(id="signUp")
            .service-form
                .title.title--30.title--light.service-form__title Записаться на сервисное обслуживание

                +form({
                    classes: 'service-form__form form--horizontal form--light',
                    btnText: 'Отправить',
                })
                    +field({
                        placeholder: 'Имя',
                        inputAttr: {
                            'required': '',
                            'data-type': 'letters'
                        },
                    })
                    +field({
                        placeholder: 'Телефон',
                        inputAttr: {
                            'required': '',
                            'data-v-name': 'phone',
                            'data-type': 'phoneNumber'
                        },
                    })
                    +field({
                        classes: '',
                        tag: 'select',
                        placeholder: 'Выбрать салон',
                        inputAttr: {
                        'required': '',
                        },
                        selectOptions: [
                            "",
                            "Москва, Новорижское шоссе, 17-й км., строение 3",
                            "Москва, МКАД, 85-й километр, вл3с2",
                            "Москва, Можайское шоссе, вл. 165 Б",
                        ],
                    })
                    +field({
                        classes: '',
                        tag: 'select',
                        placeholder: 'Марка',
                        inputAttr: {
                        'required': '',
